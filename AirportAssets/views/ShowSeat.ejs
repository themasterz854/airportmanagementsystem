                <div class="panel-body" style="width: auto;">
                    <table class="table table-hover" style="color: black; font-size: 20px">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Flight Code</th>
                                <th>Airline Name</th>
                                <th>To</th>
                                <th>Departure Date</th>
                                <th>Departure Time</th>
                                <th>Available Seats</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <%
                            if(DepartureData.length!=0){
                            var i=1;
                            DepartureData.forEach(function(data){
                            %>
                            <tr>
                                <td><%=i; %></td>
                                <td><%=data.FlightCode %></td>
                                <td><%=data.Airline %></td>
                                <td><%=data.To %></td>
                                <td><%=data.DepatureDate %></td>
                                <td><%=data.DepatureTime %></td>
                                <td><%=data.seatAvaible ></td>
                                
                            </tr>
                            <%  i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                            <% } %>
                            </tbody>
                        
                  </table>
